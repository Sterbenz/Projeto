<h3 class="page-title">
    Lista de clientes <small>Visualisar clientes</small>
</h3>
<ul class="nav nav-tabs">
    <li style="bottom: 2px">
        <form class="form-horizontal form-row-seperated" action="@Url.Action("Form","Cliente")" method="post">
            <button class="btn default green" type="submit">Registrar cliente</button>
        </form>
    </li>

    <li style="left:10px; bottom: 2px">
        <form class="form-horizontal form-row-seperated" action="#" method="post">
            <button class="btn default grey" type="submit">Registros</button>
        </form>
    </li>
</ul>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Data de nascimento</th>
            <th>Telefone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in ViewBag.Clientes)
        {
            <tr onclick="window.location='@Url.Action("Editar","Cliente", new { @cliente.Id })'">
                <th>@cliente.Id</th>
                <th>@cliente.Nome</th>
                <th>@Convert.ToUInt64(cliente.Cpf).ToString(@"000\.000\.000\-00")</th>
                <th>@Convert.ToDateTime(cliente.DataDeNascimento).ToString("dd/MM/yyyy")</th>
                <th>@Convert.ToUInt64(cliente.Telefone).ToString(@"00 00000-0000")</th>                
                <th>
                    <form class="form-horizontal form-row-seperated" action="@Url.Action("Remover","Cliente", new { @cliente.Id })" method="post">
                        <button class="btn default red-flamingo" type="submit">Deletar</button>
                    </form>
                </th>
            </tr>
        }

    </tbody>

</table>