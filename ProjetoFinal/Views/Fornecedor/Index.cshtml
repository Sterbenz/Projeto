<h3 class="page-title">
    Lista de fornecedores <small>Visualisar fornecedores</small>
</h3>
<ul class="nav nav-tabs">
    <li style="bottom: 2px">
        <form class="form-horizontal form-row-seperated" action="@Url.Action("Form","Fornecedor")" method="post">
            <button class="btn default green" type="submit">Registrar fornecedor</button>
        </form>
    </li>
</ul>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>CNPJ</th>
            <th>Email</th>
            <th>Telefone</th>
            <th colspan="3">Ações</th>
            
            

        </tr>
    </thead>
    <tbody id="listagem">
        @foreach (var fornecedores in ViewBag.Fornecedores)
        {
        <tr id="@(fornecedores.Id)">
            <td>@fornecedores.Id</td>
            <td>@fornecedores.DenominacaoSocial</td>
            <td class="cnpj">@fornecedores.CNPJ</td>
            <td>@fornecedores.Email</td>
            <td class="telefone">@fornecedores.Telefone</td>
            <td class="col-sem-margem">

                <button class="btn default red-flamingo" onclick="Deletar(@fornecedores.Id,'Fornecedor')">Deletar</button>
            </td>
            <td class="col-sem-margem">
                <form action="@Url.Action("Editar", "Fornecedor", new { fornecedores.Id })" method="post">
                    <button class="btn default green-jungle" type="submit">Editar</button>
                </form>
            </td>
            <td class="col-sem-margem">
                <form action="@Url.Action("ViewPedidos","Fornecedor", new { fornecedores.Id})" method="get">
                    <button class="btn default red-pink-stripe" type="submit">Realizar pedido</button>
                </form>

            </td>
        </tr>
        }
    </tbody>

</table>