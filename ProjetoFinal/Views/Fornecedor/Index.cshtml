<h3 class="page-title">
    Lista de fornecedores <small>Visualisar fornecedores</small>
</h3>
<ul class="nav nav-tabs">
    <li style="bottom: 2px">
        <form class="form-horizontal form-row-seperated" action="@Url.Action("Form","Fornecedor")" method="post">
            <button class="btn default green" type="submit">Registrar fornecedor</button>
        </form>
    </li>

    <li style="left:10px; bottom: 2px">
        <form class="form-horizontal form-row-seperated" action="#" method="post">
            <button class="btn default grey" type="submit">Registros</button>
        </form>
    </li>
</ul>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>CNPJ</th>
            <th>Email</th>
            <th>Telefone</th>
            

        </tr>
    </thead>
    <tbody id="listagem">
        @foreach (var fornecedores in ViewBag.Fornecedores)
        {
            <tr id="@(fornecedores.Id)">
                <th>@fornecedores.Id</th>
                <th>@fornecedores.DenominacaoSocial</th>
                <th class="cnpj">@fornecedores.CNPJ</th>
                <th>@fornecedores.Email</th>
                <th class="telefone">@fornecedores.Telefone</th>                
                <th>
                    <button class="btn default red-flamingo" onclick="Deletar(@fornecedores.Id,'Fornecedor')">Deletar</button>
                </th>
                <th>
                    <form action="@Url.Action("Editar", "Fornecedor", new { fornecedores.Id })" method="get">
                        <button class="btn default green-jungle" type="submit">Editar</button>
                    </form>
                </th>
            </tr>
        }
    </tbody>

</table>