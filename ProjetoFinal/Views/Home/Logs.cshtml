<h3 class="page-title">
    Registros gerais <small>Logs</small>
</h3>
<ul class="nav nav-tabs">
    <li style="bottom: 2px">
        <select id="filtro-logs-gerais" class="form-control">
            <option selected>Geral</option>
            <option>Pessoas</option>
            <option>Familias</option>
            <option>Produtos</option>
            <option>Fornecedores</option>
        </select>
    </li>
</ul>

<table class="table table-striped table-hover">

    <thead>
        <tr>
            <th>Tipo</th>
            <th>Descrição</th>
            <th>Data de modificação</th>
            <th>ID de quem modificou</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var familia in ViewBag.LogFamilias)
        {
            <tr class="filtro-ativo logs-familias">
                <td>Familia</td>
                <td>@familia.Descricao</td>
                <td>@familia.DataModificacao</td>
                <td>@familia.PessoaId</td>
            </tr>
        }

        @foreach (var fornecedor in ViewBag.LogFornecedores)
        {
    
            <tr class="filtro-ativo logs-fornecedores">
                <td>Fornecedores</td>
                <td>@fornecedor.Descricao</td>
                <td>@fornecedor.DataModificacao</td>
                <td>@fornecedor.PessoaId</td>
            </tr>
        }

        @foreach (var pessoa in ViewBag.LogPessoas)
        {
            <tr class="filtro-ativo logs-pessoas">
                <td>Pessoas</td>
                <td>@pessoa.Descricao</td>
                <td>@pessoa.DataModificacao</td>
                <td>@pessoa.PessoaId</td>
            </tr>
        }

        @foreach (var produto in ViewBag.LogProdutos)
        {
            <tr  class="filtro-ativo logs-produtos">
                <td>Produtos</td>
                <td>@produto.Descricao</td>
                <td>@produto.DataModificacao</td>
                <td>@produto.PessoaId</td>
            </tr>
        }
    </tbody>
</table>