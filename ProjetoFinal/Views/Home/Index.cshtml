@{
    var count = 0;
    foreach (var teste in ViewBag.Acompanhamentos)
    {
        count++;
    }

    var countProdutos = 0;
    foreach (var teste in ViewBag.ProdutosBaixa)
    {
        countProdutos++;
    }
}
<div class=""></div>
<h1>Informações da loja</h1>
<hr class="divisao-menu-principal" />

<div class="col-md-6">
    <!-- Begin: life time stats -->
    <div class="portlet box red-sunglo">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-bar-chart-o"></i>Produtos em baixa
            </div>
        </div>
        <div class="portlet-body ">
            <div class="tab-content ">
                <div class="scrolling-table">
                    @if (countProdutos > 0)
                    {
                        <table class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Produto
                                    </th>
                                    <th>
                                        Quantidade em estoque
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var prodBaixa in ViewBag.ProdutosBaixa)
                                {


                                    <tr>
                                        <th>@prodBaixa.Id</th>
                                        <th>@prodBaixa.Nome</th>
                                        <th>@prodBaixa.Quantidade</th>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h3 class="text-center">SEM PRODUTOS EM BAIXA!</h3>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- End: life time stats -->
</div>
<!-- End: life time stats -->

<div class="col-md-6">
    <!-- Begin: life time stats -->
    <div class="portlet box blue-steel">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-thumb-tack"></i>Pedidos pendentes
            </div>
        </div>
        <div class="portlet-body ">
            <div class="scrolling-table">
                @if (count > 0)
                {
                    <table class="table table-striped table-hover table-bordered  height-200">
                        <thead>
                            <tr>
                                <th>
                                    Fornecedor
                                </th>
                                <th>
                                    Pedido ID
                                </th>
                                <th>
                                    Valor total
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var pendentes in ViewBag.Acompanhamentos)
                            {


                                <tr>
                                    @foreach (var fornecedor in ViewBag.Fornecedores)
                                    {
                                        if (fornecedor.Id == pendentes.FornecedorId)
                                        {
                                            <th>@fornecedor.DenominacaoSocial</th>
                                        }
                                    }
                                    <th>@pendentes.PedidoId</th>
                                    <th>R$ <span class="dinheiro">@pendentes.ValorTotal</span></th>
                                </tr>

                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h3 class="text-center height-200"><br /><br /> SEM PEDIDOS PENDENTES!</h3>
                }

                </div>
            </div>
        </div>
</div>
<br />
<div class="col-md-6 clear-left">
    <!-- BEGIN BORDERED TABLE PORTLET-->
    <div class="portlet box yellow">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-coffee"></i>Produtos mais vendidos do mês
            </div>
        </div>
        <div class="portlet-body" id="mais-vendidos-mes-grafico">
            <canvas id="grafico-mais-vendidos" width="200" height="200"></canvas>
        </div>
    </div>
    <!-- END BORDERED TABLE PORTLET-->
</div>

<div class="col-md-6 clear-right">
    <!-- BEGIN BORDERED TABLE PORTLET-->
    <div class="portlet box yellow">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-coffee"></i>Ganhos x Gastos
            </div>
        </div>
        <div class="portlet-body" id="mais-vendidos-mes-grafico">
            <canvas id="myChart" width="50" height="50"></canvas>
        </div>
    </div>
    <!-- END BORDERED TABLE PORTLET-->
</div>
<table class="table table-striped table-hover table-bordered"></table>