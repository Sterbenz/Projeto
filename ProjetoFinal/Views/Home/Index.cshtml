<div class="col-md-6">
    <!-- Begin: life time stats -->
    <div class="portlet box blue-steel">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-thumb-tack"></i>Overview
            </div>            
        </div>
        <div class="portlet-body">
            <div class="tabbable-line">
                
                <div class="tab-content">
                    <div class="tab-pane active" id="overview_1">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Fornecedor
                                        </th>
                                        <th>
                                            Pedido ID
                                        </th>
                                        <th>
                                            Valor total
                                        </th>                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pendentes in ViewBag.Pedidos)
                                    {
                                        if (pendentes.Entregue.Count == 0)
                                        {
                                            
                                    <tr>
                                        @if (fornecedor.Id == pendentes.FornecedorId)
                                        {
                                            <th>@fornecedor.DenominacaoSocial</th>
                                        }

                                        <th>@pendentes.PedidoId</th>
                                        <th>@pendentes.ValorTotal</th>
                                    </tr>
                                            
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    </div>
    <!-- End: life time stats -->
</div>