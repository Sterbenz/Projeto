<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    Funcionarios <small>registrar e editar funcionarios</small>
</h3>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal form-row-seperated" action="@Url.Action("Edita","Cliente", new { ViewBag.Clientes.Id })" method="post">
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-shopping-cart"></i>Funcionario
                    </div>
                    <div class="actions btn-set">
                        <button class="btn default" type="reset"><i class="fa fa-reply"></i> Resetar</button>
                        <button class="btn green" type="submit"><i class="fa fa-check"></i> Salvar</button>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tabbable">
                        <ul class="nav nav-tabs"></ul>
                        <div class="tab-content no-space">
                            <div class="tab-pane active" id="tab_general">
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            Nome: <span class="required">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" name="funcionario.Nome" value="@ViewBag.Clientes.Nome" placeholder="">
                                            @Html.ValidationMessage("funcionario.Nome")
                                        </div>
                                    </div><br />
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            CPF: <span class="required">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" id="cpf" onblur="ValidaCPF()" value="@ViewBag.Funcionarios.Cpf" name="funcionario.Cpf">
                                            @Html.ValidationMessage("funcionario.Cpf")
                                        </div>
                                    </div><br />
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            Data de nascimento: <span class="required">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-md-10">
                                            <input type="date" class="form-control" value="@ViewBag.Funcionarios.DataDeNascimento" name="funcionario.DataDeNascimento">
                                            @Html.ValidationMessage("funcionario.DataDeNascimento")
                                        </div>
                                    </div><br />
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            Telefone:
                                        </label>
                                        <div class="col-md-10">
                                            <input type="tel" class="form-control" value="@ViewBag.Funcionarios.Telefone" name="funcionario.Telefone">
                                        </div>
                                    </div><br />
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            Telefone:
                                        </label>
                                        <div class="col-md-10">
                                            <div class="form-control height-auto">

                                                <select class="form-control" name="funcionario.CargoId">
                                                    @foreach (var cargo in ViewBag.Cargos)
                                                    {
                                                        if (@ViewBag.Produto.FamiliaProdutoId == cargo.Id)
                                                        {
                                                            <option value="@cargo.Id" selected>
                                                                @cargo.Nome
                                                            </option>
                                                        }

                                                        else
                                                        {
                                                            <option value="@cargo.Id">@cargo.Nome</option>}



                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>