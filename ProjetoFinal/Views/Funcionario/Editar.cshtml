<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    Funcionarios <small>registrar e editar funcionarios</small>
</h3>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal form-row-seperated form-validacao-pessoa" action="@Url.Action("Edita","Funcionario", new { ViewBag.Funcionarios.Id })" method="post">
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-shopping-cart"></i>Funcionario
                    </div>
                    <div class="actions btn-set">
                        <button class="btn default" type="reset"><i class="fa fa-reply"></i> Resetar</button>
                        <button class="btn green" type="submit"><i class="fa fa-check"></i> Salvar</button>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tabbable">
                        <ul class="nav nav-tabs"></ul>
                        <div class="tab-content no-space">
                            <div class="tab-pane active" id="tab_general">
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            Nome: <span class="required">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control form-nome" name="funcionario.Nome" value="@ViewBag.Funcionarios.Nome" placeholder="">
                                            @Html.ValidationMessage("funcionario.Nome")
                                        </div>
                                    </div><br />
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            CPF: <span class="required">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control cpf form-cpf" id="cpf" onblur="ValidaCPF()" value="@ViewBag.Funcionarios.Cpf" name="funcionario.Cpf">
                                            @Html.ValidationMessage("funcionario.Cpf")
                                        </div>
                                    </div><br />
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            Data de nascimento: <span class="required">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-md-10">
                                            <input type="date" class="form-control form-data-nascimento" onblur="validaDataNascimento()" value="@ViewBag.Funcionarios.DataDeNascimento" name="funcionario.DataDeNascimento">
                                            @Html.ValidationMessage("funcionario.DataDeNascimento")
                                        </div>
                                    </div><br />
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            Email:
                                        </label>
                                        <div class="col-md-10">
                                            <input type="email" class="form-control form-email" onblur="validaEmail()" value="@ViewBag.Funcionarios.Email" name="funcionario.Email">
                                        </div>
                                    </div><br />
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            Telefone:
                                        </label>
                                        <div class="col-md-10">
                                            <input type="tel" class="form-control telefone" value="@ViewBag.Funcionarios.Telefone" name="funcionario.Telefone">
                                        </div>
                                    </div><br />
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            Tipo de Pessoa:
                                        </label>
                                        <div class="col-md-10">
                                            <div class="form-control height-auto">

                                                <select class="form-control" name="funcionario.TipoPessoaId">
                                                    @foreach (var tipo in ViewBag.TipoPessoas)
                                                     {
                                                        if (@ViewBag.Funcionarios.TipoPessoaId == tipo.Id 
                                                            && 
                                                            @ViewBag.Funcionarios.TipoPessoaId != 1)
                                                        {
                                                            <option value="@tipo.Id" selected>
                                                                @tipo.Nome
                                                            </option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@tipo.Id">@tipo.Nome</option>
                                                        }
                                                     }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>