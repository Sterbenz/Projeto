
<h3 class="page-title">
    Lista de produtos <small>Visualisar produtos</small>
</h3>
<ul class="nav nav-tabs">
    <li style="bottom: 2px">
        <button type="button" onclick="novoProduto()" class="btn default green" data-toggle="modal" data-target="#myModal">Registrar produto</button>
    </li>

    <li style="left:10px; bottom: 2px">
        <form class="form-horizontal form-row-seperated" action="#" method="post">
            <button class="btn default grey" type="submit">Registros</button>
        </form>
    </li>
</ul>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Preco Unitario</th>
            <th>Quantidade</th>
            <th>Complemento</th>
            <th>Familia</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var produto in ViewBag.Produtos)
        {
            <tr id="@produto.Id">
                <th>@produto.Id</th>
                <th>@produto.Nome</th>
                <th>R$ @produto.PrecoPorUnidade</th>
                <th>@produto.Quantidade</th>
                <th>@produto.Complemento</th>
                <th>@produto.FamiliaProdutoId</th>
                <th>
                    <button class="btn default red-flamingo" onclick="Deletar(@produto.Id, 'Produto')" type="submit">Deletar</button>
                </th>
                <th>
                    <form action="@Url.Action("Editar", "Produto", new { produto.Id })">
                        <button class="btn default green-jungle" type="submit">Editar</button>
                    </form>
                </th>
            </tr>
        }

    </tbody>
</table>



<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Adicionar Produto</h4>
            </div>
            <div class="modal-body">
                <iframe src="" style="zoom:0.60" width="2000" height="700" frameborder="0"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script>
    function novoProduto() {
        var frameSrc = "@Url.Action("Form","Produto")";
        $('iframe').attr("src", frameSrc);                
    }

</script>